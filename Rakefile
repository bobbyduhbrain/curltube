require 'rubygems'
require 'rake'

begin
  require 'jeweler'
  Jeweler::Tasks.new do |gem|
    gem.name = "curltube"
    gem.summary = "Download youtube videos using curl"
    gem.description = "Download youtube videos using curl"
    gem.email = "max@maxogden.com"
    gem.homepage = "http://github.com/maxogden/curltube"
    gem.authors = ["Max Ogden"]
  end
  Jeweler::GemcutterTasks.new
rescue LoadError
  puts "Jeweler (or a dependency) not available. Install it with: gem install jeweler"
end